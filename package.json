{
  "name": "typescript-playground",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "author": "hyeonbungi <kimhyeonbung@gmail.com>",
  "license": "MIT",
  "description": "편리한 TypeScript 코드 작성을 위한 플레이그라운드",
  "devDependencies": {
    "@types/node": "^22.10.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
